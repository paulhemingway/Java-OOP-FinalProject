<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fff6cf;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <Label contentDisplay="CENTER" layoutX="200.0" layoutY="14.0" text="Welcome to Quiz-It!">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="inputUsername" layoutX="192.0" layoutY="138.0" prefHeight="26.0" prefWidth="217.0" promptText="Username" />
      <PasswordField fx:id="inputPassword" layoutX="192.0" layoutY="200.0" prefHeight="26.0" prefWidth="217.0" promptText="Password" />
      <Button fx:id="btnSignIn" layoutX="250.0" layoutY="265.0" mnemonicParsing="false" onAction="#checkLogin" prefHeight="26.0" prefWidth="101.0" text="Sign In" />
      <Button fx:id="btnSignUp" layoutX="250.0" layoutY="298.0" mnemonicParsing="false" onAction="#goToCreateAccount" prefHeight="26.0" prefWidth="101.0" text="Sign Up" />
      <Label layoutX="200.0" layoutY="121.0" text="Username" />
      <Label layoutX="201.0" layoutY="183.0" text="Password" />
      <Label fx:id="lbError" alignment="CENTER" contentDisplay="CENTER" layoutX="167.0" layoutY="93.0" prefHeight="17.0" prefWidth="266.0" textAlignment="CENTER" textFill="RED" />
   </children>
</AnchorPane>
