<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fff6cf #fff6cf;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CreateQuizController">
   <children>
      <Label alignment="CENTER" layoutX="214.0" layoutY="8.0" prefHeight="17.0" prefWidth="173.0" text="Create a Quiz">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <VBox layoutX="14.0" layoutY="38.0" prefHeight="324.0" prefWidth="328.0">
         <children>
            <Label text="Title" />
            <TextField fx:id="tfTitle" prefHeight="26.0" prefWidth="312.0" promptText="Title">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Question">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="tfQuestion" prefHeight="55.0" prefWidth="328.0" promptText="Write your question here" style="-fx-border-color: none;" wrapText="true">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextArea>
            <Label text="Correct Answer">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfCorrectAnswer" prefHeight="26.0" prefWidth="312.0" promptText="Correct Answer">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Other choices">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfOption1" prefHeight="26.0" prefWidth="312.0" promptText="Option">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfOption2" prefHeight="26.0" prefWidth="312.0" promptText="Option">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfOption3" prefHeight="26.0" prefWidth="312.0" promptText="Option">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Leave option field empty if using fewer than 4 options.">
               <font>
                  <Font size="9.0" />
               </font>
            </Label>
            <Label text="Must have at least 1 option other than the correct answer.">
               <font>
                  <Font size="9.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Label layoutX="517.0" layoutY="34.0" prefHeight="17.0" prefWidth="63.0" text="Questions" />
      <ListView fx:id="lvQuestionList" layoutX="356.0" layoutY="57.0" prefHeight="201.0" prefWidth="224.0" />
      <Button fx:id="btnDelete" alignment="CENTER" contentDisplay="CENTER" layoutX="530.0" layoutY="258.0" mnemonicParsing="false" onAction="#deleteQuestion" prefHeight="20.0" prefWidth="50.0" text="Delete">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
      <Button fx:id="btnAddQuestion" layoutX="356.0" layoutY="304.0" mnemonicParsing="false" onAction="#addQuestion" text="Add Question" />
      <Button fx:id="btnCreateQuiz" layoutX="498.0" layoutY="304.0" mnemonicParsing="false" onAction="#CreateQuiz" text="Create Quiz" />
      <Label fx:id="lbError" alignment="CENTER" layoutX="169.0" layoutY="347.0" prefHeight="45.0" prefWidth="264.0" textFill="RED" />
      <Button fx:id="btnBack" layoutX="14.0" layoutY="8.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
   </children>
</AnchorPane>
